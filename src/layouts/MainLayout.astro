---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ChatWidget from '../components/ChatWidget.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Transform your life after 40 with proven fitness and wellness strategies" } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Male Transformation Over 40 Program",
  "description": "Fitness and nutrition program specifically designed for men over 40",
  "offers": {
    "@type": "Offer",
    "price": "297.00",
    "priceCurrency": "USD",
    "availability": "https://schema.org/InStock",
    "url": "https://maletransformation.me"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "reviewCount": "124"
  },
  "review": {
    "@type": "Review",
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": "5",
      "bestRating": "5"
    },
    "author": {
      "@type": "Person",
      "name": "John Smith"
    },
    "reviewBody": "This program helped me lose 30 pounds and gain significant muscle mass in just 6 months. The nutrition guidance and workout plans are perfectly tailored for men over 40."
  }
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Male Transformation Over 40</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="/fontawesome/css/all.min.css" rel="stylesheet">
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-1FEHCV1BVF"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-1FEHCV1BVF');
    </script>
  </head>
  <body class="min-h-screen bg-gray-50">
    <Header />
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    <Footer />
    <ChatWidget />
  </body>
</html>

<style is:global>
  :root {
    --primary: #2563eb;
    --primary-dark: #1d4ed8;
  }
  html {
    font-family: 'Inter', sans-serif;
  }
</style>